    <body>
        <%- include("../../partials/navbar.ejs") %>

            <div class="container">
                <hr>
                <div class="card mt-5">
                    <div class="card-header">
                        <h2>Atualizar Usuário</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/usuario/atualizar/senha">
                            <h4>Atualizar Senha:</h4>
                            <input type="text" name="senha1" class="form-control" placeholder="Digite seu nova senha:"><br>
                            <h4>Confirme novamente a sua senha:</h4>
                            <input type="text" name="senha2" class="form-control" placeholder="Digite novamente sua nova senha:">
                            <input type="hidden" name="id" value="<%= usuario.id %>">
                            <br>
                            <hr>
                            <h4>Para confirmar a atualização digite a sua senha atual:</h4>
                            <input type="password" name="senha" class="form-control">
                            <button class="btn btn btn-success mt-3">Atualizar</button>
                        </form>
                    </div>
                </div>
            </div>
    </body>

