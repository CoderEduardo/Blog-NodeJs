<%- include("../../partials/header.ejs") %>

    <body>
        <%- include("../../partials/navbar.ejs") %>
            <div class="container">
                <hr>
                <h2>Usuários</h2>
                <hr>
                <a href="/admin/usuario/novo" class="btn btn-success">Criar novo Usuário</a>

                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usuarios.forEach(usuario=> { %>
                            <tr>
                                <th>
                                    <%= usuario.id %>
                                </th>
                                <th>
                                    <%= usuario.email %>
                                </th>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>

            </div>
    </body>

    <%- include("../../partials/footer.ejs") %>